# ========================================
# CONFIGURARE BOT DISCORD
# ========================================

# Token-ul botului Discord (obligatoriu)
DISCORD_TOKEN=your_discord_bot_token_here

# ID-ul aplicației botului Discord (obligatoriu)
CLIENT_ID=your_discord_client_id_here

# ID-ul serverului pentru înregistrarea rapidă a comenzilor (opțional)
# Dacă nu este setat, comenzile se vor înregistra global (pot dura câteva minute)
GUILD_ID=your_guild_id_here

# ========================================
# CONFIGURARE DASHBOARD WEB
# ========================================

# Secret-ul aplicației Discord pentru OAuth2 (obligatoriu pentru dashboard)
# Obține-l din Discord Developer Portal -> OAuth2 -> Client Secret
CLIENT_SECRET=your_discord_client_secret_here

# URL-ul de callback pentru OAuth2 (obligatoriu pentru dashboard)
# Pentru dezvoltare locală: http://localhost:30001/auth/discord/callback
# Pentru producție: https://yourdomain.com/auth/discord/callback
CALLBACK_URL=http://localhost:30001/auth/discord/callback

# Secret pentru sesiuni (obligatoriu pentru dashboard)
# Generează un string aleatoriu pentru securitate
SESSION_SECRET=your_random_session_secret_here

# Portul pentru dashboard (opțional, implicit 3000)
# Dacă 3000 este ocupat, se va încerca automat 30001
DASHBOARD_PORT=3000

# ========================================
# CONFIGURARE BAZĂ DE DATE
# ========================================

# URL-ul bazei de date (opțional, implicit SQLite local)
# Pentru SQLite local (recomandat pentru dezvoltare):
DATABASE_URL="file:./dev.db"

# Pentru PostgreSQL (pentru producție):
# DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Pentru MySQL (pentru producție):
# DATABASE_URL="mysql://username:password@localhost:3306/database_name"

# ========================================
# CONFIGURARE ECONOMIE ȘI JOCURI
# ========================================

# Valoarea bonusului zilnic (opțional, implicit 100)
DAILY_BONUS_AMOUNT=100

# Valoarea bonusului săptămânal (opțional, implicit 500)
WEEKLY_BONUS_AMOUNT=500

# Valoarea minimă pentru muncă (opțional, implicit 10)
WORK_MIN_AMOUNT=10

# Valoarea maximă pentru muncă (opțional, implicit 50)
WORK_MAX_AMOUNT=50

# Valoarea pentru furt (opțional, implicit 100)
ROB_AMOUNT=100

# Șansa de succes pentru furt (opțional, implicit 0.3 = 30%)
ROB_SUCCESS_CHANCE=0.3

# Penalizarea pentru furt eșuat (opțional, implicit 50)
ROB_FAILURE_PENALTY=50

# ========================================
# CONFIGURARE SLOTS ȘI LOTERIE
# ========================================

# Costul pentru un tichet de loterie (opțional, implicit 50)
LOTTERY_TICKET_COST=50

# Valoarea maximă pentru jocul de noroc (opțional, implicit 1000)
GAMBLE_MAX_AMOUNT=1000

# Multiplicatorul pentru sloturi (opțional, implicit 2.0)
SLOTS_MULTIPLIER=2.0

# ========================================
# CONFIGURARE AUTO-MODERARE
# ========================================

# Numărul maxim de avertismente înainte de escaladare (opțional, implicit 3)
MAX_WARNINGS_BEFORE_ESCALATION=3

# Timpul de timeout pentru escaladare în minute (opțional, implicit 10)
ESCALATION_TIMEOUT_MINUTES=10

# Limita pentru anti-spam (opțional, implicit 5)
ANTISPAM_LIMIT=5

# Fereastra de timp pentru anti-spam în secunde (opțional, implicit 5)
ANTISPAM_WINDOW=5

# ========================================
# CONFIGURARE LOGURI ȘI DEBUG
# ========================================

# Nivelul de log (opțional, implicit 'info')
# Opțiuni: 'error', 'warn', 'info', 'debug'
LOG_LEVEL=info

# Activarea modului debug (opțional, implicit false)
DEBUG=false

# ========================================
# CONFIGURARE SECURITATE
# ========================================

# Timpul de expirare a sesiunii în milisecunde (opțional, implicit 24 ore)
SESSION_EXPIRY=86400000

# Activarea HTTPS pentru producție (opțional, implicit false)
# Pentru producție, setează la true și configurează certificatul SSL
HTTPS_ENABLED=false

# ========================================
# INSTRUCȚIUNI DE CONFIGURARE
# ========================================

# 1. Copiază acest fișier în .env
# 2. Completează toate valorile obligatorii (fără "your_..._here")
# 3. Pentru dashboard, asigură-te că ai configurat OAuth2 în Discord Developer Portal
# 4. Pentru baza de date, rulează: npm run db:generate && npm run db:push
# 5. Pentru dashboard: npm run dashboard
# 6. Pentru bot: npm run dev

# ========================================
# VERIFICARE CONFIGURARE
# ========================================

# După configurare, verifică cu:
# - npm run db:generate (generează client Prisma)
# - npm run db:push (sincronizează schema)
# - npm run dashboard (testează dashboard-ul)
# - npm run dev (testează bot-ul)
