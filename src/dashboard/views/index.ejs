<!-- Content for layout -->

<!-- Hero Section -->
<div class="gradient-bg text-white py-20 rounded-2xl mb-12">
    <div class="text-center">
        <h1 class="text-5xl font-bold mb-6">
            <i class="fab fa-discord mr-4"></i>
            Discord Bot Dashboard
        </h1>
        <p class="text-xl mb-8 max-w-3xl mx-auto">
            Gestionează-ți botul Discord cu ușurință prin interfața web modernă și intuitivă. 
            Monitorizează statistici, configurează setări și administrează serverele tale.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <% if (locals.isAuthenticated) { %>
                <a href="/dashboard" class="bg-white text-discord-blurple px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                    <i class="fas fa-tachometer-alt mr-2"></i>
                    Accesează Dashboard-ul
                </a>
            <% } else { %>
                <a href="/login" class="bg-white text-discord-blurple px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
                    <i class="fab fa-discord mr-2"></i>
                    Conectează-te cu Discord
                </a>
            <% } %>
            <a href="#features" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-discord-blurple transition-colors">
                <i class="fas fa-info-circle mr-2"></i>
                Află mai multe
            </a>
        </div>
    </div>
</div>

<!-- Bot Status -->
<% if (locals.bot) { %>
<div class="bg-white rounded-lg shadow-md p-6 mb-8">
    <div class="flex items-center justify-between">
        <div class="flex items-center">
            <img src="<%= locals.bot.displayAvatarURL() %>" alt="Bot Avatar" class="w-16 h-16 rounded-full mr-4">
            <div>
                <h2 class="text-2xl font-bold text-gray-800"><%= locals.bot.username %></h2>
                <p class="text-gray-600">Bot Status: <span class="text-green-500 font-semibold">Online</span></p>
                <p class="text-sm text-gray-500">ID: <%= locals.bot.id %></p>
            </div>
        </div>
        <div class="text-right">
            <p class="text-sm text-gray-500">Uptime</p>
            <p class="text-lg font-semibold text-gray-800">24/7</p>
        </div>
    </div>
</div>
<% } %>

<!-- Features Section -->
<div id="features" class="mb-12">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">Funcționalități Principale</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Server Management -->
        <div class="bg-white rounded-lg shadow-md p-6 card-hover">
            <div class="text-center mb-4">
                <i class="fas fa-server text-4xl text-discord-blurple"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">Gestionare Server</h3>
            <p class="text-gray-600 text-center">
                Administrează-ți serverele Discord cu ușurință. Vezi statistici, 
                gestionează roluri și configurează setări avansate.
            </p>
        </div>

        <!-- Bot Statistics -->
        <div class="bg-white rounded-lg shadow-md p-6 card-hover">
            <div class="text-center mb-4">
                <i class="fas fa-chart-line text-4xl text-green-500"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">Statistici în Timp Real</h3>
            <p class="text-gray-600 text-center">
                Monitorizează performanța botului, activitatea utilizatorilor 
                și statisticile serverului în timp real.
            </p>
        </div>

        <!-- Command Management -->
        <div class="bg-white rounded-lg shadow-md p-6 card-hover">
            <div class="text-center mb-4">
                <i class="fas fa-terminal text-4xl text-purple-500"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">Gestionare Comenzi</h3>
            <p class="text-gray-600 text-center">
                Configurează și personalizează comenzile botului. 
                Activează/dezactivează funcționalități specifice.
            </p>
        </div>

        <!-- User Management -->
        <div class="bg-white rounded-lg shadow-md p-6 card-hover">
            <div class="text-center mb-4">
                <i class="fas fa-users text-4xl text-blue-500"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">Gestionare Utilizatori</h3>
            <p class="text-gray-600 text-center">
                Gestionează utilizatorii serverului, vezi profiluri, 
                istoricul activității și administrează permisiunile.
            </p>
        </div>

        <!-- Economy System -->
        <div class="bg-white rounded-lg shadow-md p-6 card-hover">
            <div class="text-center mb-4">
                <i class="fas fa-coins text-4xl text-yellow-500"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">Sistem Economic</h3>
            <p class="text-gray-600 text-center">
                Monitorizează economia serverului, balanțele utilizatorilor, 
                tranzacțiile și leaderboard-ul.
            </p>
        </div>

        <!-- Music & Entertainment -->
        <div class="bg-white rounded-lg shadow-md p-6 card-hover">
            <div class="text-center mb-4">
                <i class="fas fa-music text-4xl text-pink-500"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-3 text-center">Muzică & Divertisment</h3>
            <p class="text-gray-600 text-center">
                Gestionează coada de muzică, jocurile și activitățile 
                de divertisment din server.
            </p>
        </div>
    </div>
</div>

<!-- Commands Preview -->
<div class="mb-12">
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">Comenzi Disponibile</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Moderation -->
        <div class="bg-white rounded-lg shadow-md p-4">
            <h4 class="font-semibold text-gray-800 mb-2">
                <i class="fas fa-shield-alt text-red-500 mr-2"></i>
                Moderare
            </h4>
            <ul class="text-sm text-gray-600 space-y-1">
                <li>• /ban - Ban utilizator</li>
                <li>• /kick - Kick utilizator</li>
                <li>• /timeout - Timeout utilizator</li>
                <li>• /clear - Șterge mesaje</li>
            </ul>
        </div>

        <!-- Economy -->
        <div class="bg-white rounded-lg shadow-md p-4">
            <h4 class="font-semibold text-gray-800 mb-2">
                <i class="fas fa-coins text-yellow-500 mr-2"></i>
                Economie
            </h4>
            <ul class="text-sm text-gray-600 space-y-1">
                <li>• /balance - Vezi balanța</li>
                <li>• /daily - Bonus zilnic</li>
                <li>• /work - Muncește</li>
                <li>• /gamble - Joacă</li>
            </ul>
        </div>

        <!-- Fun -->
        <div class="bg-white rounded-lg shadow-md p-4">
            <h4 class="font-semibold text-gray-800 mb-2">
                <i class="fas fa-gamepad text-green-500 mr-2"></i>
                Divertisment
            </h4>
            <ul class="text-sm text-gray-600 space-y-1">
                <li>• /meme - Meme aleatorii</li>
                <li>• /8ball - Întrebare magică</li>
                <li>• /slots - Slot machine</li>
                <li>• /roll - Zar aleatoriu</li>
            </ul>
        </div>

        <!-- Utility -->
        <div class="bg-white rounded-lg shadow-md p-4">
            <h4 class="font-semibold text-gray-800 mb-2">
                <i class="fas fa-tools text-blue-500 mr-2"></i>
                Utilități
            </h4>
            <ul class="text-sm text-gray-600 space-y-1">
                <li>• /ping - Latency bot</li>
                <li>• /avatar - Vezi avatarul</li>
                <li>• /serverinfo - Info server</li>
                <li>• /userinfo - Info utilizator</li>
            </ul>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="text-center bg-white rounded-lg shadow-md p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Gata să începi?</h2>
    <p class="text-gray-600 mb-6">
        Conectează-te cu Discord și începe să gestionezi botul tău prin interfața web modernă.
    </p>
    <% if (locals.isAuthenticated) { %>
        <a href="/dashboard" class="discord-blurple text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors">
            <i class="fas fa-arrow-right mr-2"></i>
            Mergi la Dashboard
        </a>
    <% } else { %>
        <a href="/login" class="discord-blurple text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors">
            <i class="fab fa-discord mr-2"></i>
            Conectează-te Acum
        </a>
    <% } %>
</div>
