<!-- Content for layout -->

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full text-center">
        <!-- Error Icon -->
        <div class="mx-auto h-24 w-24 bg-red-100 rounded-full flex items-center justify-center mb-6">
            <i class="fas fa-exclamation-triangle text-red-600 text-4xl"></i>
        </div>
        
        <!-- Error Message -->
        <h1 class="text-3xl font-bold text-gray-900 mb-4">
            Oops! A apărut o eroare
        </h1>
        
        <p class="text-lg text-gray-600 mb-8">
            <%= error || 'A apărut o eroare neașteptată. Te rugăm să încerci din nou.' %>
        </p>
        
        <!-- Error Code (if available) -->
        <% if (locals.statusCode) { %>
            <div class="bg-gray-100 rounded-lg p-4 mb-8">
                <p class="text-sm text-gray-600">
                    Cod de eroare: <span class="font-mono font-semibold"><%= statusCode %></span>
                </p>
            </div>
        <% } %>
        
        <!-- Action Buttons -->
        <div class="space-y-4">
            <a href="/" class="w-full bg-discord-blurple text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-600 transition-colors inline-block">
                <i class="fas fa-home mr-2"></i>
                Înapoi la Acasă
            </a>
            
            <a href="/dashboard" class="w-full bg-gray-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-700 transition-colors inline-block">
                <i class="fas fa-tachometer-alt mr-2"></i>
                Înapoi la Dashboard
            </a>
            
            <button onclick="window.history.back()" class="w-full bg-gray-200 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-300 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>
                Pagina Anterioară
            </button>
        </div>
        
        <!-- Help Section -->
        <div class="mt-8 text-left bg-blue-50 border border-blue-200 rounded-lg p-4">
            <h3 class="text-sm font-medium text-blue-800 mb-2">
                <i class="fas fa-info-circle mr-1"></i>
                Ce poți face:
            </h3>
            <ul class="text-sm text-blue-700 space-y-1">
                <li>• Verifică dacă ai permisiunile necesare</li>
                <li>• Asigură-te că botul este adăugat în server</li>
                <li>• Încearcă să te reconectezi cu Discord</li>
                <li>• Contactează administratorul dacă problema persistă</li>
            </ul>
        </div>
    </div>
</div>

<!-- Background Pattern -->
<div class="fixed inset-0 -z-10 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-red-50 via-pink-50 to-purple-50"></div>
    <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg"%3E%3Cg fill="none" fill-rule="evenodd"%3E%3Cg fill="%23EF4444" fill-opacity="0.05"%3E%3Ccircle cx="30" cy="30" r="2"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-30"></div>
</div>
